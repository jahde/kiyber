<h1 class="title">
  <%= @item.title %>
</h1>

<p class="date">
  Submitted <%= time_ago_in_words(@item.created_at) %> Ago
  <% if user_signed_in? %>
    | <%= link_to 'Edit', edit_item_path(@item) %> |
      <%= link_to 'Delete', item_path(@item), method: :delete, data: { confirm: 'Are you sure?'} %>
  <% end %>
</p>

<p class="body">
  <%= @item.body %>
</p>
