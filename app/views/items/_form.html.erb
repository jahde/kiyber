<%= form_for @item, :html => { :multipart => true } do |f| %>
  <% if @item.errors.any? %>
    <div id="errors">
      <h2><%= pluralize(@item.errors.count, "error") %> prevented this from saving:</h2>
      <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <br>
  <%= f.label :description %><br>
  <%= f.text_field :body %><br>
  <br>
  <%= select_tag(:category_id,
    options_for_select(@categories), :prompt => "Select one!") %>
  <br>
  <%= f.file_field :photo %>
  <%= f.submit %>
<% end %>

