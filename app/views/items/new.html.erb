<h1>Add a new item</h1>

<%= form_for :item, url: items_path do |f| %>
  <% if @item.errors.any? %>
    <div id="errors">
      <h2><%= pluralize(@item.errors.count, "error") %> prevented this item from saving:</h2>
      <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <br>
  <%= f.label :body %><br>
  <%= f.text_field :body %>
  <br>
  <%= f.submit %>
  <br>
<% end %>
